<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.betapp.controller.BetHistoryController"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="← Назад" onAction="#goBack" styleClass="button-primary"/>
        <Label text="История ставок" styleClass="title"/>
    </HBox>

    <TableView fx:id="betsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="matchColumn" text="Матч" prefWidth="200"/>
            <TableColumn fx:id="betColumn" text="Ставка" prefWidth="100"/>
            <TableColumn fx:id="amountColumn" text="Сумма" prefWidth="100"/>
            <TableColumn fx:id="oddsColumn" text="Коэф." prefWidth="80"/>
            <TableColumn fx:id="winColumn" text="Выигрыш" prefWidth="100"/>
            <TableColumn fx:id="statusColumn" text="Статус" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Дата" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>