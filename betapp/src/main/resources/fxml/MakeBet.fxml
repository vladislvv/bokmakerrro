<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.betapp.controller.MakeBetController"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="← Назад" onAction="#goBack" styleClass="button-primary"/>
        <Label text="Сделать ставку" styleClass="title"/>
    </HBox>

    <Label fx:id="balanceLabel" styleClass="input-label" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
        <VBox spacing="15">
            <Label text="Доступные матчи:" styleClass="input-label" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <TableView fx:id="matchesTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 14px;">
                <columns>
                    <TableColumn fx:id="matchColumn" text="Матч" prefWidth="250"/>
                    <TableColumn fx:id="dateColumn" text="Дата и время" prefWidth="150"/>
                    <TableColumn fx:id="odds1Column" text="П1" prefWidth="70"/>
                    <TableColumn fx:id="oddsDrawColumn" text="X" prefWidth="70"/>
                    <TableColumn fx:id="odds2Column" text="П2" prefWidth="70"/>
                </columns>
            </TableView>
        </VBox>

        <VBox spacing="20" style="-fx-padding: 20;" alignment="CENTER">
            <VBox spacing="15" styleClass="container" style="-fx-padding: 20; -fx-min-width: 350;">
                <Label fx:id="selectedMatchLabel" styleClass="input-label" wrapText="true"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <Separator style="-fx-background-color: rgba(255,255,255,0.2);"/>

                <Label text="Выберите исход:" styleClass="input-label" style="-fx-font-size: 14px;"/>
                <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: rgba(255,255,255,0.05); -fx-border-radius: 10;">
                    <fx:define>
                        <ToggleGroup fx:id="betTypeGroup"/>
                    </fx:define>
                    <RadioButton fx:id="team1Radio" toggleGroup="$betTypeGroup" styleClass="radio-button"/>
                    <RadioButton fx:id="drawRadio" toggleGroup="$betTypeGroup" styleClass="radio-button"/>
                    <RadioButton fx:id="team2Radio" toggleGroup="$betTypeGroup" styleClass="radio-button"/>
                </VBox>

                <Separator style="-fx-background-color: rgba(255,255,255,0.2);"/>

                <Label text="Сумма ставки ($):" styleClass="input-label" style="-fx-font-size: 14px;"/>
                <TextField fx:id="amountField" promptText="Введите сумму" styleClass="text-field"/>

                <CheckBox fx:id="instantResultCheckbox" text="Мгновенный результат"
                          style="-fx-text-fill: #ffffff; -fx-font-size: 14px;" selected="true"/>

                <Label fx:id="oddsLabel" styleClass="input-label" style="-fx-font-size: 14px;"/>
                <Label fx:id="potentialWinLabel" styleClass="input-label"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

                <Button text="СДЕЛАТЬ СТАВКУ" onAction="#placeBet"
                        styleClass="button-primary"
                        style="-fx-font-size: 18px; -fx-padding: 15 40 15 40; -fx-background-color: #2196F3;"/>
            </VBox>

            <VBox spacing="10" styleClass="container" style="-fx-padding: 15;">
                <Label text="Подсказки:" styleClass="input-label" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label text="• Зеленым выделены лучшие коэффициенты" styleClass="input-label" style="-fx-font-size: 12px;"/>
                <Label text="• Для тенниса и баскетбола доступны только П1/П2" styleClass="input-label" style="-fx-font-size: 12px;"/>
                <Label text="• Минимальная ставка: $1" styleClass="input-label" style="-fx-font-size: 12px;"/>
                <Label text="• 'Мгновенный результат': результат определяется сразу" styleClass="input-label"
                       style="-fx-font-size: 12px; -fx-text-fill: #4CAF50; -fx-font-weight: bold;"/>
            </VBox>
        </VBox>
    </SplitPane>

</VBox>