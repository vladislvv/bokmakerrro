<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.betapp.controller.SimulateResultsController"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="← Назад" onAction="#goBack" styleClass="button-primary"/>
        <Label text="Симуляция результатов" styleClass="title"/>
    </HBox>

    <VBox spacing="15" styleClass="container">
        <Label text="Предстоящие матчи для симуляции:" styleClass="input-label" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <TableView fx:id="matchesTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 14px;">
            <columns>
                <TableColumn fx:id="matchColumn" text="Матч" prefWidth="250"/>
                <TableColumn fx:id="dateColumn" text="Дата и время" prefWidth="150"/>
                <TableColumn fx:id="oddsColumn" text="Коэффициенты" prefWidth="200"/>
            </columns>
        </TableView>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Симулировать выбранный" onAction="#simulateSelected" styleClass="button-primary"/>
            <Button text="Симулировать все" onAction="#simulateAll" styleClass="button-primary"
                    style="-fx-background-color: #FF5722;"/>
        </HBox>
    </VBox>

    <VBox spacing="10" styleClass="container" style="-fx-padding: 15;">
        <Label text="Информация:" styleClass="input-label" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <Label text="• Симуляция случайно определяет результат матча по коэффициентам" styleClass="input-label" style="-fx-font-size: 12px;"/>
        <Label text="• Определяются результаты всех ставок на матч" styleClass="input-label" style="-fx-font-size: 12px;"/>
        <Label text="• Автоматически выплачиваются выигрыши" styleClass="input-label" style="-fx-font-size: 12px;"/>
        <Label text="• После симуляции матч перемещается в 'Завершенные'" styleClass="input-label" style="-fx-font-size: 12px;"/>
    </VBox>

</VBox>