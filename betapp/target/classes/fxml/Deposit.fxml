<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.betapp.controller.DepositController"
      spacing="20" alignment="CENTER">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="← Назад" onAction="#goBack" styleClass="button-primary"/>
        <Label text="Пополнение баланса" styleClass="title"/>
    </HBox>

    <VBox spacing="20" alignment="CENTER" styleClass="container"
          style="-fx-padding: 40; -fx-min-width: 400;">

        <Label fx:id="balanceLabel" styleClass="title" style="-fx-font-size: 20px;"/>

        <Label text="Быстрая сумма:" styleClass="input-label"/>
        <GridPane fx:id="amountsGrid" hgap="10" vgap="10" alignment="CENTER"/>

        <Label text="Или введите свою сумму:" styleClass="input-label"/>
        <TextField fx:id="amountField" promptText="Сумма пополнения"
                   styleClass="text-field" style="-fx-min-width: 200;"/>

        <Button fx:id="depositButton" text="Пополнить" onAction="#deposit"
                styleClass="button-primary" style="-fx-font-size: 16px; -fx-padding: 15 40 15 40;"/>

    </VBox>

</VBox>